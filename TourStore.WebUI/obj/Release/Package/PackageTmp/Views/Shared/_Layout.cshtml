</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("TourStore", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })  
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Список туров", "List", "Home")</li>
                    <li>@Html.ActionLink("Контакты", "About", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="col-xs-12">
        @RenderBody()
        <hr />
        <footer>
            <a href="https://webmaster.yandex.ru/sqi?host=tourstoreapp.azurewebsites.net"><img width="88" height="31" 
             alt="" border="0" src="https://yandex.ru/cycounter?tourstoreapp.azurewebsites.net&theme=dark&lang=ru" /></a>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
