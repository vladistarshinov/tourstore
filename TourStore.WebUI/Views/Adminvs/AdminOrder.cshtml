@model IEnumerable<TourStore.WebUI.Entities.ShippingDetail>

@{
    ViewBag.Title = "Админ панель: список заказов";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<hr />
<div class="panel panel-default">
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>Имя</th>
                <th class="text-center">Адрес</th>
                <th class="text-center">Город</th>
                <th class="text-center">Количество</th>
                <th class="text-center">Cумма</th>
                <th class="text-center">Действия</th>


            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.OrderId</td>
                    <td class="text-center">@item.Name</td>
                    <td class="text-center">@item.Line1</td>
                    <td class="text-center">@item.City</td>
                    <td class="text-center">@item.Line2</td>
                    <td class="text-center">@item.Line3</td>
                    <td class="text-center">
                        @using (Html.BeginForm("DeleteOrder", "Adminvs"))
                        {
                            @Html.Hidden("OrderId", item.OrderId)
                            <input type="submit"
                                   class="btn btn-default btn-xs"
                                   value="Удалить" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
</div>